
<h1><%= @item.name %></h1>
<p>Description:<%= @item.description %></p>
<p>Price: <%= @item.price %></p>
<p>Quantity: <%= @item.inventory %></p>
<p>Status: <% if @item.status == true %>
           <%= "Available" %>
           <% else %>
           <%= "Unavailable" %>
           <% end %></p>
<p>Selling Merchant: <%= @item.merchant.name %></p>
<img src="<%= @item.image %>" alt="<%= @item.name %>" height="60" width="60">
